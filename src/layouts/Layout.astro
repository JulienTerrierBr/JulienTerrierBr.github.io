---
export interface Props {
  title: string;
}
const { title } = Astro.props;
---
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body class="bg-blue-50 text-gray-800">
    <header class="bg-white shadow sticky top-0 z-50">
      <div class="max-w-5xl mx-auto px-6 py-4">
        <h1 class="text-3xl font-bold text-blue-800">PACE</h1>
      </div>
      <nav class="flex text-center border-t border-b border-blue-200">
        <a href="/" class={`flex-1 py-4 font-semibold transition ${Astro.url.pathname === '/' ? 'bg-blue-200 text-blue-900' : 'bg-blue-100 text-blue-800 hover:bg-blue-200'}`}>Accueil</a>
        <a href="/bilan" class={`flex-1 py-4 font-semibold transition ${Astro.url.pathname === '/bilan' ? 'bg-blue-200 text-blue-900' : 'bg-blue-100 text-blue-800 hover:bg-blue-200'}`}>Bilan</a>
        <a href="/auteur" class={`flex-1 py-4 font-semibold transition ${Astro.url.pathname === '/auteur' ? 'bg-blue-200 text-blue-900' : 'bg-blue-100 text-blue-800 hover:bg-blue-200'}`}>Qui je suis</a>
      </nav>
    </header>
    <main class="max-w-5xl mx-auto p-6">
      <slot />
    </main>
    <footer class="text-center text-sm text-gray-500 py-4">
      © 2025 — Rapport PACE
    </footer>
  </body>
</html>